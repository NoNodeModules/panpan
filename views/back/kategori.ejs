<% layout("layout") %> 

<section class="panel col-md-4">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
            <a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
        </div>

        <h2 class="panel-title">ÃœYELER</h2>
    </header>
    <div class="panel-body">
       <form action="/admin/kategori/ekle" method="POST">
           <div class="form-group">
               <label>Kategori</label>
               <input type="text" name="title" class="form-control">
           </div>
           <div class="form-group">
               <button type="submit" class="btn btn-primary pull-right">Ekle</button>
           </div>
       </form>
       <br>
       <ul class="list-group">
           <% kategori.forEach(element => { %>
            <li class="list-group-item"> <%= element.title %> <a class="btn btn-danger btn-xs" style="float: right;" href="/admin/kategori/<%= element._id %>"> <i class="fa fa-close"></i> </a> </li>
           <% }) %>
       </ul>
       
    </div>
</section>